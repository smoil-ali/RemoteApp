<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".functionalities_Activity"
    android:fitsSystemWindows="true"
    android:id="@+id/drawerOfFunctionalitiesClass"
    android:layout_gravity="center"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <androidx.appcompat.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/colorPrimary"
            android:id="@+id/toolbar"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
            android:elevation="4dp"
            />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/toolbar">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:background="@color/colorPrimary"
                android:gravity="center_vertical"
                android:id="@+id/header_layout"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Hello!!!"
                    android:textColor="@color/white"
                    android:textSize="25dp"
                    android:id="@+id/hello"
                    android:layout_centerHorizontal="true"

                    />

                <TextView
                    android:id="@+id/user_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="25dp"
                    android:text="UserName here"
                    android:textColor="@color/white"
                    android:layout_below="@id/hello"
                    android:layout_centerHorizontal="true"
                    />


            </RelativeLayout>



            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/header_layout"
                android:padding="10dp"
                >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:background="@drawable/border"
                    android:id="@+id/mousePadLayout"
                    android:onClick="MovetoOtherHouse"
                    >

                    <ImageView
                        android:id="@+id/mouse"
                        android:layout_width="60dp"
                        android:layout_height="100dp"
                        android:src="@drawable/ic_mouse_black_24dp"
                        android:layout_centerVertical="true"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Mouse Pad"
                        android:textSize="25dp"
                        android:textStyle="bold"
                        android:layout_toRightOf="@id/mouse"
                        android:layout_centerVertical="true"/>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:background="@drawable/border"
                    android:id="@+id/KeyBoardLayout"
                    android:layout_below="@id/mousePadLayout"
                    android:onClick="MovetoOtherHouse"
                    android:layout_marginTop="10dp"
                    >

                    <ImageView
                        android:id="@+id/KeyBoard"
                        android:layout_width="60dp"
                        android:layout_height="100dp"
                        android:src="@drawable/ic_keyboard_black_24dp"
                        android:layout_centerVertical="true"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="KeyBoard"
                        android:textSize="25dp"
                        android:textStyle="bold"
                        android:layout_toRightOf="@id/KeyBoard"
                        android:layout_centerVertical="true"/>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:background="@drawable/border"
                    android:id="@+id/RunningAppsLayout"
                    android:layout_below="@id/KeyBoardLayout"
                    android:layout_marginTop="10dp"
                    android:onClick="MovetoOtherHouse"
                    >

                    <ImageView
                        android:id="@+id/RunningApps"
                        android:layout_width="60dp"
                        android:layout_height="100dp"
                        android:src="@drawable/ic_apps_black_24dp"
                        android:layout_centerVertical="true"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Running Apps"
                        android:textSize="25dp"
                        android:textStyle="bold"
                        android:layout_toRightOf="@id/RunningApps"
                        android:layout_centerVertical="true"/>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:background="@drawable/border"
                    android:id="@+id/cameraLayout"
                    android:layout_below="@id/RunningAppsLayout"
                    android:layout_marginTop="10dp"
                    android:onClick="MovetoOtherHouse"
                    >

                    <ImageView
                        android:id="@+id/camera"
                        android:layout_width="60dp"
                        android:layout_height="100dp"
                        android:src="@drawable/ic_linked_camera_black_24dp"
                        android:layout_centerVertical="true"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Web Cammera"
                        android:textSize="25dp"
                        android:textStyle="bold"
                        android:layout_toRightOf="@id/camera"
                        android:layout_centerVertical="true"/>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:background="@drawable/border"
                    android:id="@+id/powerLayout"
                    android:layout_below="@id/cameraLayout"
                    android:layout_marginTop="10dp"
                    android:onClick="MovetoOtherHouse"
                    >

                    <ImageView
                        android:id="@+id/power"
                        android:layout_width="60dp"
                        android:layout_height="100dp"
                        android:src="@drawable/ic_power_settings_new_black_24dp"
                        android:layout_centerVertical="true"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Power off"
                        android:textSize="25dp"
                        android:textStyle="bold"
                        android:layout_toRightOf="@id/power"
                        android:layout_centerVertical="true"/>

                </RelativeLayout>


            </RelativeLayout>





        </RelativeLayout>

        </ScrollView>

    </RelativeLayout>




    <com.google.android.material.navigation.NavigationView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:id="@+id/nav_view"
        app:headerLayout="@layout/nav_header"
        app:menu="@menu/drawer_menu"
        android:layout_gravity="start"
        />

</androidx.drawerlayout.widget.DrawerLayout>